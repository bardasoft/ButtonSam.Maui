<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bsam="clr-namespace:ButtonSam.Maui;assembly=ButtonSam.Maui"
             x:Class="Sample.ButtonWithShadowsPage"
             Title="ButtonWithShadowsPage"
             Padding="20"
             BackgroundColor="{AppThemeBinding Light=#FFF, Dark=#444}">
    <VerticalStackLayout>
        <Border StrokeShape="RoundRectangle 8"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="black"
                        Offset="0,0"
                        Radius="20"
                        Opacity="0.4"/>
            </Border.Shadow>
            
            <bsam:Button BackgroundColor="{AppThemeBinding Light=#FFF, Dark=#343434}">
                <Label Text="I into shadows!"/>
            </bsam:Button>
        </Border>
    </VerticalStackLayout>
</ContentPage>