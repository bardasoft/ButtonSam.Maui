<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sbutton="clr-namespace:ButtonSam.Maui;assembly=ButtonSam.Maui"
             x:Class="Sample.NoClickableButtonPage"
             Title="NoClickableButtonPage">
    <VerticalStackLayout Padding="10"
                         Spacing="10">
        <sbutton:Button IsClickable="False">
            <Label HorizontalTextAlignment="Center"
                   Text="No clickable button"/>
        </sbutton:Button>

        <Button Text="Clickable default button #1"/>
        <Button Text="Clickable default button #2"/>
    </VerticalStackLayout>
</ContentPage>