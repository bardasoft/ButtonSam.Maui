<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sbutton="clr-namespace:ButtonSam.Maui;assembly=ButtonSam.Maui"
             x:Class="Sample.ButtonRoundedPage"
             Title="ButtonRoundedPage">
    <VerticalStackLayout Spacing="20"
                         Padding="20">
        <Label Text="ButtonSam"/>
        <sbutton:Button IsAutoCircle="True"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100">
            <Label Text="Hello"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </sbutton:Button>

        <Label Text="MAUI Button (for compare)"/>
        <Button CornerRadius="50"
                Text="Hello"
                WidthRequest="100"
                HeightRequest="100"/>
    </VerticalStackLayout>
</ContentPage>